            </div>
            <div class="form-group">
                <label asp-for="PlayerAccount.InactivateDate" class="control-label"></label>
                <input asp-for="PlayerAccount.InactivateDate" class="form-control" />
                <span asp-validation-for="PlayerAccount.InactivateDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlayerAccount.BanDate" class="control-label"></label>
                <input asp-for="PlayerAccount.BanDate" class="form-control" />
                <span asp-validation-for="PlayerAccount.BanDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlayerAccount.ExpireDate" class="control-label"></label>
                <input asp-for="PlayerAccount.ExpireDate" class="form-control" />
                <span asp-validation-for="PlayerAccount.ExpireDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
