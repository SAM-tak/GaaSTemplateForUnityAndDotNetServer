@page
@model YourGameServer.Pages.PlayerAccounts.CreateModel
@using YourGameServer.Models

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>PlayerAccount</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
