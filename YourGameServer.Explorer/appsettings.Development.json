{
  "ConnectionStrings": {
    "GameDbConnection": "Data Source=../game.db",
    "ExplorerDbConnection": "Data Source=explorer.db"
  },
  "DetailedErrors": true,
  "NLog": {
    "rules": [
      {
        "logger": "Microsoft.Hosting.Lifetime",
        "minLevel": "Debug",
        "writeTo": "logfile,console,memory"
      },
      {
        "logger": "YourGameServer.*",
        "minLevel": "Trace",
        "writeTo": "console"
      },
      {
        "logger": "YourGameServer.*",
        "minLevel": "Debug",
        "writeTo": "logfile,memory"
      },
      {
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "logfile,console,memory"
      }
    ]
  }
}