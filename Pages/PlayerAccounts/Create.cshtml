                <label asp-for="PlayerAccount.Status" class="control-label"></label>
                <select asp-for="PlayerAccount.Status" asp-items="@Html.GetEnumSelectList<PlayerStatus>()" class="form-control"></select>
                <span asp-validation-for="PlayerAccount.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlayerAccount.Since" class="control-label"></label>
                <input asp-for="PlayerAccount.Since" class="form-control" />
                <span asp-validation-for="PlayerAccount.Since" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlayerAccount.LastLogin" class="control-label"></label>
                <input asp-for="PlayerAccount.LastLogin" class="form-control" />
