{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=../game.db",
    "LocalMySQL": "Server=127.0.0.1;Database=Game;User Id=root;Password=admin;"
  },
  "GameDbConnectionStringKey": "DefaultConnection",
  "Logging": {
    "LogLevel": {
      "Default": "Trace",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "NLog": {
    "autoReload": true,
    "throwConfigExceptions": true,
    "internalLogLevel": "Info",
    "internalLogFile": "${currentdir}/Logs/internal-nlog.txt",
    "targets": {
      "async": true,
      "logfile": {
        "type": "File",
        "keepFileOpen": false,
        "fileName": "${currentdir}/Logs/nlog-${shortdate}.log"
      },
      "logconsole": {
        "type": "Console"
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "logconsole"
      },
      {
        "logger": "*",
        "minLevel": "Debug",
        "writeTo": "logfile"
      }
    ]
  },
  "AllowedHosts": "*"
}