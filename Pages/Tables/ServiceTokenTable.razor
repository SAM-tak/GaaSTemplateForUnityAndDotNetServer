@page "/tables/servicetoken"

@inject YourGameServer.Data.GameDbContext dbContext
@inject MudBlazor.IScrollManager scrollManager
@inject MudBlazor.IDialogService dialogService
@inject MudBlazor.ISnackbar snackBar

<MudExpansionPanel id="@EditPanelId" Text="@EditPanelText" @bind-IsExpanded="_editPanelExpanded">
    <EditForm Model="@_newItem" OnValidSubmit="OnValidSubmit">
        <DataAnnotationsValidator />
        <MudCard>
            <MudCardContent>
                <MudTextField @bind-Value="_newItem.Name" Label="@(TextHelper.LabelFor<ServiceToken>(i => i.Name))" />
                <MudTextField @bind-Value="_newItem.ProductName" Label="@(TextHelper.LabelFor<ServiceToken>(i => i.ProductName))" />
                <MudTextField @bind-Value="_newItem.DisplayName" Label="@(TextHelper.LabelFor<ServiceToken>(i => i.DisplayName))" />
                <MudTextField @bind-Value="_newItem.Description" Label="@(TextHelper.LabelFor<ServiceToken>(i => i.Description))" />
                <MudNumericField @bind-Value="_newItem.IconBlobId" Label="@(TextHelper.LabelFor<ServiceToken>(i => i.IconBlobId))" />
            </MudCardContent>
            <MudCardActions>
                <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Success">Create New</MudButton>
                <MudButton Class="ml-2" Variant="Variant.Filled" OnClick="Clear">Clear</MudButton>
            </MudCardActions>
        </MudCard>
    </EditForm>
</MudExpansionPanel>
<br />
<MudTable T="ServiceToken" Items="dbContext.ServiceTokens" Filter="Search" CanCancelEdit
           ="true" RowEditPreview="BackupItem" RowEditCancel="ResetItemToOriginalValues"
          RowEditCommit="@(async (x) => await ItemHasBeenCommitted(x))">
    <ToolBarContent>
        <MudText Typo="Typo.h6">@ListPanelText</MudText>
        <MudSpacer />
        <MudTextField @bind-Value="_searchString" Placeholder="Search for ServiceTokens..." Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
    </ToolBarContent>
    <HeaderContent>
        <MudTh>@(TextHelper.LabelFor<ServiceToken>(i => i.Id))</MudTh>
        <MudTh>@(TextHelper.LabelFor<ServiceToken>(i => i.Name))</MudTh>
        <MudTh>@(TextHelper.LabelFor<ServiceToken>(i => i.ProductName))</MudTh>
        <MudTh>@(TextHelper.LabelFor<ServiceToken>(i => i.DisplayName))</MudTh>
        <MudTh>@(TextHelper.LabelFor<ServiceToken>(i => i.Description))</MudTh>
        <MudTh>@(TextHelper.LabelFor<ServiceToken>(i => i.IconBlobId))</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Id">@context.Id</MudTd>
        <MudTd DataLabel="Name">@context.Name</MudTd>
        <MudTd DataLabel="ProductName">@context.ProductName</MudTd>
        <MudTd DataLabel="DisplayName">@context.DisplayName</MudTd>
        <MudTd DataLabel="Description">@context.Description</MudTd>
        <MudTd DataLabel="IconBlobId">@context.IconBlobId</MudTd>
        <MudTd DataLabel="">
            <MudFab @onclick="@(async () => await Delete(@context))" Color="Color.Primary" Icon="@Icons.Material.Filled.Delete" Size="Size.Small" IconSize="Size.Small" />
        </MudTd>
    </RowTemplate>
    <RowEditingTemplate>
        <MudTd DataLabel="Id">@context.Id</MudTd>
        <MudTd DataLabel="Name">
            <MudTextField @bind-Value="context.Name" />
        </MudTd>
        <MudTd DataLabel="ProductName">
            <MudTextField @bind-Value="context.ProductName" />
        </MudTd>
        <MudTd DataLabel="DisplayName">
            <MudTextField @bind-Value="context.DisplayName" />
        </MudTd>
        <MudTd DataLabel="Description">
            <MudTextField @bind-Value="context.Description" />
        </MudTd>
        <MudTd DataLabel="IconBlobId">
            <MudNumericField @bind-Value="context.IconBlobId" />
        </MudTd>
    </RowEditingTemplate>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>

@code {
    bool _editPanelExpanded = false;
    string _searchString = "";
    ServiceToken _newItem = new();

    ServiceToken _backup;

    static readonly string EditPanelId =  $"{nameof(ServiceToken).ToLower()}-edit-panel";
    static readonly string EditPanelText = $"Add {nameof(ServiceToken)}";
    static readonly string ListPanelText = nameof(ServiceToken);

    private bool Search(ServiceToken x)
    {
        if (string.IsNullOrWhiteSpace(_searchString)) return true;

        if (x.Name.Contains(_searchString, StringComparison.OrdinalIgnoreCase)) return true;

        if (x.DisplayName.Contains(_searchString, StringComparison.OrdinalIgnoreCase)) return true;

        if (x.Description.Contains(_searchString, StringComparison.OrdinalIgnoreCase)) return true;

        if ($"{x.Id} {x.IconBlobId}".Contains(_searchString)) return true;

        return false;
    }

    async Task OnValidSubmit(EditContext contex)
    {
        dbContext.Add(_newItem);
        await dbContext.SaveChangesAsync();
        snackBar.Add($"New {nameof(ServiceToken)} (id:{_newItem.Id}) Created.", Severity.Success);
        _newItem = new ();
    }

    void Clear()
    {
        _newItem = new();
    }

    void BackupItem(object x)
    {
        _backup = ((ServiceToken)x) with { };
    }

    async Task ItemHasBeenCommitted(object x)
    {
        //AddEditionEvent($"RowEditCommit event: Changes to Element {((Element)element).Name} committed");
        var record = (ServiceToken)x;
        dbContext.Entry(record).State = Microsoft.EntityFrameworkCore.EntityState.Modified;
        await dbContext.SaveChangesAsync();
        snackBar.Add($"{nameof(ServiceToken)} (id:{record.Id}) Saved.", Severity.Success);
    }

    void ResetItemToOriginalValues(object x)
    {
        //AddEditionEvent($"RowEditCancel event: Editing of Element {((Element)element).Name} cancelled");
        ((ServiceToken)x).CopyFrom(_backup);
    }

    async Task Save(ServiceToken x)
    {
        dbContext.Entry(x).State = Microsoft.EntityFrameworkCore.EntityState.Modified;
        await dbContext.SaveChangesAsync();
        snackBar.Add($"{nameof(ServiceToken)} (id:{x.Id}) Saved.", Severity.Success);
    }

    async Task Delete(ServiceToken x)
    {
        var parameters = new DialogParameters();
        parameters.Add("ContentText", $"Do you really want to delete this records? This process cannot be undone.");
        parameters.Add("ContentSubText", $"{x}");
        parameters.Add("ButtonText", "Delete");
        parameters.Add("Color", Color.Error);

        if (!(await dialogService.Show<ConfirmDialog>("Delete", parameters, new DialogOptions() { CloseButton = true, MaxWidth = MaxWidth.ExtraSmall }).Result).Cancelled) {
            dbContext.ServiceTokens.Remove(x);
            await dbContext.SaveChangesAsync();
            snackBar.Add($"{nameof(ServiceToken)} (id:{x.Id}) Deleted.", Severity.Success);
        }
    }
}
