                @Html.DisplayNameFor(model => model.PlayerAccount[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlayerAccount[0].Since)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlayerAccount[0].LastLogin)
            </th>
            <th>
