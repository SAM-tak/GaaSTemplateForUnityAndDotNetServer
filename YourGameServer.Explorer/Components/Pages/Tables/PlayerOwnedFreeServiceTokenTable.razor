@code {
    bool _editPanelExpanded = false;
    string _searchString = "";
    PlayerOwnedFreeServiceToken _newItem = new();

    static readonly string EditPanelId =  $"{nameof(PlayerOwnedFreeServiceToken).ToLower()}-edit-panel";
    static readonly string EditPanelText = $"Add {nameof(PlayerOwnedFreeServiceToken)}";
    static readonly string ListPanelText = nameof(PlayerOwnedFreeServiceToken);

    private bool QuickFilter(PlayerOwnedFreeServiceToken x)
    {
        if (string.IsNullOrWhiteSpace(_searchString)) return true;

        if ($"{x.OwnerId} {x.Origin} {x.Status} {x.Quantity} {x.Used} {x.Period} {x.LastUsedDate} {x.InvalidateDate} {x.ExpireDate}".Contains(_searchString)) return true;

        return false;
    }

    async Task OnValidSubmit(EditContext contex)
    {
        try {
            using var transaction = _dbContext.Database.BeginTransaction(System.Data.IsolationLevel.Serializable);
            _newItem.Idx = (await _dbContext.PlayerOwnedFreeServiceTokens.Where(i => i.OwnerId == _newItem.OwnerId).MaxAsync(x => (int?)x.Idx) ?? 0) + 1;
            _newItem.Since = DateTime.UtcNow;
            await _dbContext.AddAsync(_newItem);
            await _dbContext.SaveChangesAsync();
            await transaction.CommitAsync();
            _logger.LogInformation("{User}|New {Table} (OwnerId:{OwnerId}  Idx:{Idx}) created.",
                _httpContextAccessor.GetNameAndIdentifier(), nameof(PlayerOwnedFreeServiceToken), _newItem.OwnerId, _newItem.Idx);
            _snackBar.Add($"New {nameof(PlayerOwnedFreeServiceToken)} (OwnerId:{_newItem.OwnerId} Idx:{_newItem.Idx}) created.", Severity.Success);
            _newItem = new ();
        }
        catch(Exception ex) {
            _snackBar.Add($"Create {nameof(PlayerOwnedFreeServiceToken)} (OwnerId:{_newItem.OwnerId} Idx:{_newItem.Idx}) failed. {ex}", Severity.Error);
        }
    }

    async Task CommittedItemChanges(PlayerOwnedFreeServiceToken item)
    {
        var updatee = await _dbContext.PlayerOwnedFreeServiceTokens.FindAsync(item.OwnerId, item.Idx);
        if(updatee != null) {
            updatee = item;
            _dbContext.Entry(updatee).State = EntityState.Modified;
            await _dbContext.SaveChangesAsync();
            _logger.LogInformation("{User}|{Table} (OwnerId:{OwnerId}  Idx:{Idx}) updated.",
                _httpContextAccessor.GetNameAndIdentifier(), nameof(PlayerOwnedFreeServiceToken), item.OwnerId, item.Idx);
            _snackBar.Add($"{nameof(PlayerOwnedFreeServiceToken)} (OwnerId:{item.OwnerId} Idx:{item.Idx}) updated.", Severity.Success);
        }
        else {
            _snackBar.Add($"{nameof(PlayerOwnedFreeServiceToken)} (OwnerId:{item.OwnerId} Idx:{item.Idx}) not found.", Severity.Error);
        }
    }

    void Clear()
    {
        _newItem = new();
    }

    async Task Delete(PlayerOwnedFreeServiceToken item)
    {
        var parameters = new DialogParameters();
        parameters.Add("ContentText", $"Do you really want to delete this records? This process cannot be undone.");
        parameters.Add("ContentSubText", $"{item}");
        parameters.Add("ButtonText", "Delete");
        parameters.Add("Color", Color.Error);

        var dialog = await _dialogService.ShowAsync<ConfirmDialog>("Delete", parameters, new() { CloseButton = true, MaxWidth = MaxWidth.ExtraSmall });
        if(!(await dialog.Result)!.Canceled) {
            _dbContext.PlayerOwnedFreeServiceTokens.Remove(item);
            await _dbContext.SaveChangesAsync();
            _logger.LogInformation("{User}|{Table} (OwnerId:{OwnerId}  Idx:{Idx}) deleted.",
                _httpContextAccessor.GetNameAndIdentifier(), nameof(PlayerOwnedFreeServiceToken), item.OwnerId, item.Idx);
            _snackBar.Add($"{nameof(PlayerOwnedFreeServiceToken)} (OwnerId:{_newItem.OwnerId} Idx:{_newItem.Idx}) deleted.", Severity.Success);
        }
    }
}
