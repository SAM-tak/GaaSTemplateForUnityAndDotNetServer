@page "/tables/playerownedfreeservicetoken"

@inject YourGameServer.Data.GameDbContext dbContext
@inject MudBlazor.IScrollManager scrollManager
@inject MudBlazor.IDialogService dialogService
@inject MudBlazor.ISnackbar snackBar

<MudExpansionPanel id="@EditPanelId" Text="@EditPanelText" @bind-IsExpanded="_editPanelExpanded">
    <EditForm Model="@_newItem" OnValidSubmit="OnValidSubmit">
        <DataAnnotationsValidator />
        <MudCard>
            <MudCardContent>
                <MudTd>
                    <MudNumericField @bind-Value="_newItem.OwnerId" Label="@(TextHelper.LabelFor<PlayerOwnedFreeServiceToken>(i => i.OwnerId))" T="ulong" Min="0" />
                </MudTd>
                <MudTd>
                    <MudSelect T="ConsumableOrigin" @bind-Value="_newItem.Origin">
                        @foreach (ConsumableOrigin item in Enum.GetValues(typeof(ConsumableOrigin)))
                        {
                            <MudSelectItem Value="@item">@item.GetDisplayName()</MudSelectItem>
                        }
                    </MudSelect>
                </MudTd>
                <MudTd>
                    <MudSelect T="ConsumableStatus" @bind-Value="_newItem.Status">
                        @foreach (ConsumableStatus item in Enum.GetValues(typeof(ConsumableStatus)))
                        {
                            <MudSelectItem Value="@item">@item.GetDisplayName()</MudSelectItem>
                        }
                    </MudSelect>
                </MudTd>
                <MudTd>
                    <MudDatePicker @bind-Date="_newItem.Period" Label="@(TextHelper.LabelFor<PlayerOwnedFreeServiceToken>(i => i.Period))" />
                    <MudTimePicker Time="_newItem.Period?.TimeOfDay"TimeChanged="(t) => _newItem.Period = _newItem.Period?.Date + t" />
                </MudTd>
                <MudTd>
                    <MudDatePicker @bind-Date="_newItem.UsedDate" Label="@(TextHelper.LabelFor<PlayerOwnedFreeServiceToken>(i => i.UsedDate))" />
                    <MudTimePicker Time="_newItem.UsedDate?.TimeOfDay"TimeChanged="(t) => _newItem.UsedDate = _newItem.UsedDate?.Date + t" />
                </MudTd>
                <MudTd>
                    <MudDatePicker @bind-Date="_newItem.InvalidateDate" Label="@(TextHelper.LabelFor<PlayerOwnedFreeServiceToken>(i => i.InvalidateDate))" />
                    <MudTimePicker Time="_newItem.InvalidateDate?.TimeOfDay" TimeChanged="(t) => _newItem.InvalidateDate = _newItem.InvalidateDate?.Date + t" />
                </MudTd>
                <MudTd>
                    <MudDatePicker @bind-Date="_newItem.ExpireDate" Label="@(TextHelper.LabelFor<PlayerOwnedFreeServiceToken>(i => i.ExpireDate))" />
                    <MudTimePicker Time="_newItem.ExpireDate?.TimeOfDay" TimeChanged="(t) => _newItem.ExpireDate = _newItem.ExpireDate?.Date + t" />
                </MudTd>
            </MudCardContent>
            <MudCardActions>
                <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Success">Create New</MudButton>
                <MudButton Class="ml-2" Variant="Variant.Filled" OnClick="Clear">Clear</MudButton>
            </MudCardActions>
        </MudCard>
    </EditForm>
</MudExpansionPanel>
<br />
<MudDataGrid Items="dbContext.PlayerOwnedFreeServiceTokens" Sortable="true" Filterable="true" QuickFilter="QuickFilter" ReadOnly="false" EditMode="@DataGridEditMode.Inline">
    <ToolBarContent>
        <MudText Typo="Typo.h6">@ListPanelText</MudText>
        <MudSpacer />
        <MudTextField @bind-Value="_searchString" Placeholder="Search for PlayerProfiles..." Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0" />
    </ToolBarContent>
    <Columns>
        <Column T="PlayerOwnedFreeServiceToken" Field="Id">
            <EditTemplate>
                @context.Id
                <MudTooltip Text="Delete">
                    <MudIconButton @onclick="@(async () => await Delete(@context))" Color="Color.Primary" Icon="@Icons.Material.Filled.Delete" />
                </MudTooltip>
            </EditTemplate>
        </Column>
        <Column T="PlayerOwnedFreeServiceToken" Field="OwnerId" />
        <Column T="PlayerOwnedFreeServiceToken" Field="Origin">
            <EditTemplate>
                <MudSelect T="ConsumableOrigin" @bind-Value="context.Origin">
                    @foreach (ConsumableOrigin item in Enum.GetValues(typeof(ConsumableOrigin)))
                    {
                        <MudSelectItem Value="@item">@item.GetDisplayName()</MudSelectItem>
                    }
                </MudSelect>
            </EditTemplate>
        </Column>
        <Column T="PlayerOwnedFreeServiceToken" Field="Status">
            <EditTemplate>
                <MudSelect T="ConsumableStatus" @bind-Value="context.Status">
                    @foreach (ConsumableStatus item in Enum.GetValues(typeof(ConsumableStatus)))
                    {
                        <MudSelectItem Value="@item">@item.GetDisplayName()</MudSelectItem>
                    }
                </MudSelect>
            </EditTemplate>
        </Column>
        <Column T="PlayerOwnedFreeServiceToken" Field="Period">
            <EditTemplate>
                <MudDatePicker @bind-Date="context.Period" />
                <MudTimePicker Time="context.Period?.TimeOfDay" TimeChanged="(t) => context.Period = context.Period?.Date + t" />
            </EditTemplate>
        </Column>
        <Column T="PlayerOwnedFreeServiceToken" Field="UsedDate">
            <EditTemplate>
                <MudDatePicker @bind-Date="context.UsedDate" />
                <MudTimePicker Time="context.UsedDate?.TimeOfDay" TimeChanged="(t) => context.UsedDate = context.UsedDate?.Date + t" />
            </EditTemplate>
        </Column>
        <Column T="PlayerOwnedFreeServiceToken" Field="InvalidateDate">
        <EditTemplate>
            <MudDatePicker @bind-Date="context.InvalidateDate" />
            <MudTimePicker Time="context.InvalidateDate?.TimeOfDay" TimeChanged="(t) => context.InvalidateDate = context.InvalidateDate?.Date + t" />
        </EditTemplate>
        </Column>
        <Column T="PlayerOwnedFreeServiceToken" Field="ExpireDate">
            <EditTemplate>
                <MudDatePicker @bind-Date="context.ExpireDate" />
                <MudTimePicker Time="context.ExpireDate?.TimeOfDay" TimeChanged="(t) => context.ExpireDate = context.ExpireDate?.Date + t" />
            </EditTemplate>
        </Column>
    </Columns>
    <PagerContent>
        <MudDataGridPager T="PlayerOwnedFreeServiceToken" />
    </PagerContent>
</MudDataGrid>

@code {
    bool _editPanelExpanded = false;
    string _searchString = "";
    PlayerOwnedFreeServiceToken _newItem = new();

    static readonly string EditPanelId =  $"{nameof(PlayerOwnedFreeServiceToken).ToLower()}-edit-panel";
    static readonly string EditPanelText = $"Add {nameof(PlayerOwnedFreeServiceToken)}";
    static readonly string ListPanelText = nameof(PlayerOwnedFreeServiceToken);

    private bool QuickFilter(PlayerOwnedFreeServiceToken x)
    {
        if (string.IsNullOrWhiteSpace(_searchString)) return true;

        if ($"{x.Id} {x.Origin} {x.Status} {x.Period} {x.UsedDate} {x.InvalidateDate} {x.ExpireDate}".Contains(_searchString)) return true;

        return false;
    }

    async Task OnValidSubmit(EditContext contex)
    {
        dbContext.Add(_newItem);
        await dbContext.SaveChangesAsync();
        snackBar.Add($"New {nameof(PlayerOwnedFreeServiceToken)} (id:{_newItem.Id}) Created.", Severity.Success);
        _newItem = new ();
    }

    void Clear()
    {
        _newItem = new();

    }

    async Task Delete(PlayerOwnedFreeServiceToken x)
    {
        var parameters = new DialogParameters();
        parameters.Add("ContentText", $"Do you really want to delete this records? This process cannot be undone.");
        parameters.Add("ContentSubText", $"{x}");
        parameters.Add("ButtonText", "Delete");
        parameters.Add("Color", Color.Error);

        if (!(await dialogService.Show<ConfirmDialog>("Delete", parameters, new DialogOptions() { CloseButton = true, MaxWidth = MaxWidth.ExtraSmall }).Result).Cancelled) {
            dbContext.PlayerOwnedFreeServiceTokens.Remove(x);
            await dbContext.SaveChangesAsync();
            snackBar.Add($"{nameof(PlayerOwnedFreeServiceToken)} (id:{x.Id}) Deleted.", Severity.Success);
        }
    }
}
